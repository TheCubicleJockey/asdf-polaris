#!/usr/bin/env bash

set -e
set -o pipefail

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version  }
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_polaris() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local bin_install_path="$install_path/bin"
  local tmp_install_path="$install_path/polaris.tar.gz"
  local download_url="$(get_download_url $version)"
  local platform="$(get_arch)"

  mkdir -p "${bin_install_path}"

  local bin_path="${bin_install_path}/polaris"
  echo "Downloading polaris from ${download_url}"
  if curl -LO -sf "$download_url" -o "$tmp_install_path"; then
    tar xf "$tmp_install_path"  --directory="$tmp_install_path"
    mv $tmp_install_path/polaris $bin_path
    chmod +x $bin_path
  else
    exit 1
  fi
}

get_arch() {
  uname | tr '[:upper:]' '[:lower:]'
}

get_cpu() {
  local machine_hardware_name
  machine_hardware_name=${ASDF_POLARIS_OVERWRITE_ARCH:-"$(uname -m)"}

  case "$machine_hardware_name" in
    'x86_64') local cpu_type="amd64";;
    'powerpc64le' | 'ppc64le') local cpu_type="ppc64le";;    
    'aarch64') local cpu_type="arm64";;
    'armv7l') local cpu_type="arm";;
    *) local cpu_type="$machine_hardware_name";;
  esac

  echo "$cpu_type"
}

get_download_url() {
  local version="$1"
  local platform="$(get_arch)"
  echo "https://github.com/FairwindsOps/polaris/releases/download/${version}/polaris_${platform}_$(get_cpu).tar.gz"
}

install_polaris $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
